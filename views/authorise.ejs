<% include layout.ejs %>

<body>
  <div class="container">
    <form class="form-signin" method="POST" action="" role="form">
      <h2 class="form-signin-heading">Authorise</h2>
      <div class="form-group">
        <div>You authorise access to your account</div>
      </div>
      <div class="form-group">
        <input type="hidden" name="allow" value="yes">
        <input type="hidden" name="cliend_id" value="<%= client_id %>">
        <input type="hidden" name="redirect_uri" value="<%= redirect_uri %>">
        <input type="hidden" name="response_type" value="code">
        <button class="btn btn-lg btn-primary btn-block" type="submit"> Authorise</button>
      </div>
    </form>
  </div>
</body>